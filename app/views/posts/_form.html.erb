<% if @post.errors.any? %>
  <div class='row'>
    <div class= 'alert alert-error span8' >
     <h5> Please fix the following errors: </h5>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><% msg %> </li>
      <% end %>
    </ul> 
  </div>
<% end %>

<h4> Create a Post </h4>
<div class='well'>
  <%= form_for @post do |f| %>
</div>
  <div class='control-group'>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class='control-group'>
  <%= f.label :url %>
  <%= f.text_field :title %>
</div>
<div class='control-group'>
  <%= f.label :description %>
  <%= f.text_field :description, rows: 5 %>
</div>
  <br/>
  <%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: 'btn btn-primary' %>
<% end %>